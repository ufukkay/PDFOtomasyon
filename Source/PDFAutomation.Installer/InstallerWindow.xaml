<Window x:Class="PDFAutomation.Installer.InstallerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Otomasyon Sistemi - Kurulum" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F3F4F6">
    <Window.Resources>
        <!-- Renk Paleti -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>     <!-- Royal Blue -->
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#1E40AF"/> <!-- Dark Blue -->
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>     <!-- Emerald Green -->
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>   <!-- White -->
        <SolidColorBrush x:Key="TextColor" Color="#1F2937"/>        <!-- Gray 800 -->
        <SolidColorBrush x:Key="SubTextColor" Color="#6B7280"/>     <!-- Gray 500 -->
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>      <!-- Gray 200 -->

        <!-- Gölge Efekti -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="10" Color="#000000" Direction="270" Opacity="0.05" ShadowDepth="2"/>



        <!-- Stiller -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" Padding="20" Effect="{StaticResource CardShadow}">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="PDF Otomasyon Sistemi" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                    <TextBlock Text="Kurulum Sihirbazı v1.0" FontSize="14" Foreground="{StaticResource SubTextColor}" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="30">
            <!-- Kurulum Yolu -->
            <TextBlock Text="Kurulum Dizini" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextColor}" Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtInstallPath" Text="C:\Program Files\PDFAutomation" FontSize="14" Padding="10" VerticalContentAlignment="Center" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"/>
                <Button Grid.Column="1" Content="Gözat" Click="BtnBrowse_Click" Margin="10,0,0,0"/>
            </Grid>

            <!-- Seçenekler -->
            <StackPanel Margin="0,0,0,25">
                <CheckBox x:Name="ChkService" Content="Windows Servisi kur (Önerilen)" IsChecked="True" FontSize="14" Margin="0,0,0,10" Foreground="{StaticResource TextColor}"/>
                <TextBlock Text="Uygulama kapalı olsa bile arka planda otomatik çalışır." FontSize="12" Foreground="{StaticResource SubTextColor}" Margin="24,-8,0,10"/>
                
                <CheckBox x:Name="ChkDesktopShortcut" Content="Masaüstüne kısayol oluştur" IsChecked="True" FontSize="14" Margin="0,0,0,10" Foreground="{StaticResource TextColor}"/>
                <CheckBox x:Name="ChkStartMenu" Content="Başlat menüsüne kısayol ekle" IsChecked="True" FontSize="14" Margin="0,0,0,10" Foreground="{StaticResource TextColor}"/>
            </StackPanel>

            <!-- Durum -->
            <Border Background="{StaticResource CardBackground}" Padding="15" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                <StackPanel>
                    <Grid>
                        <TextBlock x:Name="TxtStatus" Text="Kuruluma hazır." FontSize="13" Foreground="{StaticResource TextColor}"/>
                        <TextBlock x:Name="TxtPercent" Text="" HorizontalAlignment="Right" FontSize="13" Foreground="{StaticResource SubTextColor}"/>
                    </Grid>
                    <ProgressBar x:Name="ProgressBar" Height="8" Margin="0,10,0,0" Minimum="0" Maximum="100" Value="0" Background="#E5E7EB" Foreground="{StaticResource PrimaryColor}" BorderThickness="0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- FooterButtons -->
        <Border Grid.Row="2" Padding="20" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="İptal" Click="BtnCancel_Click" Margin="0,0,10,0" Width="100"/>
                <Button x:Name="BtnInstall" Content="Kurulumu Başlat" Click="BtnInstall_Click" Style="{StaticResource PrimaryButton}" Width="160"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
